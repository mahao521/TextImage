<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:textImage="http://schemas.android.com/apk/res-auto"
    tools:context="com.mahao.textimage.MainActivity">

    <com.mahao.textimage.TextImage
        android:id="@+id/txt_txtImage"
        android:background="#ffffff"
        textImage:txtSrc="@mipmap/dashang"
        textImage:txtContent="打赏了5元"
        android:layout_width="400dp"
        android:layout_height="400dp"/>


    <Button
        android:text="点击变色"
        android:id="@+id/btn_one"
        android:onClick="btnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:text=""
        android:id="@+id/btn_two"
        android:onClick="btnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_one"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</LinearLayout>
